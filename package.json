{
  "name": "frontend",
  "license": "0BSD",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "jest --config=tests/jest.config.js",
    "detox-build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
    "detox-test": "detox test --configuration android.emu.debug",
    "start": "expo start",
    "android": "expo run:android",
    "web": "expo start --web",
    "ios": "expo run:ios"
  },
  "dependencies": {
    "@expo/metro-runtime": "~4.0.1",
    "@react-native/gradle-plugin": "^0.77.0",
    "dotenv": "^16.4.7",
    "expo": "~52.0.27",
    "expo-status-bar": "~2.0.1",
    "react": "18.3.1",
    "react-native": "^0.76.6",
    "react-native-web": "~0.19.13"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@react-native-community/cli": "latest",
    "detox": "^20.32.0",
    "jes": "^0.6.1",
    "jest": "^29.7.0",
    "package-name": "^0.1.0"
  },
  "detox": {
    "configurations": {
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && ./gradlew assembleDebug && ./gradlew assembleAndroidTest -DtestBuildType=debug",
        "type": "android.emulator",
        "device": {
          "avdName": "Medium_Phone_API_35"
        }
      }
    },
    "test-runner": "jest"
  },
  "private": true
}
